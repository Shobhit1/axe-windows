<Project DefaultTargets="Build" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <Choose>
     <When Condition=" '$(MicroBuild_NuPkgSigningEnabled)' != 'false' and '$(MicroBuild_SigningEnabled)' == 'true' and '$(IsPackable)' == 'true' and '$(NonShipping)' != 'true' and '$(SignType)' != '' "
          DependsOnTargets="@(SignNuGetPackageDependsOn)"
          AfterTargets="Pack">
        <ItemGroup>
            <FilesToSign Include="@(SignNuGetPackFiles)">
            	<Authenticode>NuGet</Authenticode>
            </FilesToSign>
        </ItemGroup>
     </When>
   </Choose>

</Project>
